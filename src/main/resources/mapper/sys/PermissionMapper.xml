<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xw.taes.sys.dao.PermissionDao">
    <select id="selectPermissionByRole" parameterType="com.xw.taes.sys.domain.Role" resultType="com.xw.taes.sys.domain.Permission">
        SELECT
            p.id,
            p.permission_name permissionName,
            p.description
        FROM
            t_sys_permission p
                LEFT JOIN t_sys_role_permission rp ON p.id = rp.permission_id
        WHERE
            rp.role_id = #{id}
    </select>
</mapper>